#!/usr/bin/env python

import os, sys

if len(sys.argv) != 2:
  print 'usage: %s <path>' % sys.argv[0]
  sys.exit(1)

path = sys.argv[1]

cur = ''
for subdir in os.path.split(path):
  cur = os.path.join(cur, subdir)
  if not os.path.isdir(cur):
    os.mkdir(cur)
  file(os.path.join(cur, '__init__.py'), 'w').close()
