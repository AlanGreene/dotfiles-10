[user]
	name = Ian Langworth
[core]
	editor = vim
	pager = less -FRX
	excludesfile = ~/.gitignore
[github]
	user = statico
[alias]
	up = pull origin
	st = status
	co = checkout
	ci = commit
	civ = commit -v
	cia = commit -a
	civa = commit -v -a
	b = branch
	sta = stash
	rewind-one = reset --hard HEAD^
[color]
	diff = auto
	status = auto
	branch = auto
